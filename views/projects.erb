<div class="container">

  <div class="table">
    <h1>Projects Page</h1>
    <br>
    <br>
    <%if @projects != []%>
    <table class="table">
      <tr>
        <td class='projects'><strong> Projects </strong></td>
        <td class="volunteers"><strong> Volunteers </strong></td>
      </tr>
      <% @projects.each do |project| %>
      <tr>
        <td class='projects'><%= project.title %></td>
          <%@volunteers.each do |volunteer| %>
            <%if volunteer.project_id == project.id %>
            <td class="volunteers"><%= volunteer.name %></td>
            <% end %>
          <% end %>

      </tr>
      <% end %>
    </table>
    <% else %>
      <h2>no projects yet</h2>
    <% end %>
  </div>
  <br>
  <br>

  <form class="container form-group button" action="/projects" method="post" name="projects">
    <label id="projectname" name="projectname" type = "text">Enter project</label>
    <input type="text" name="projectname">
    <button  type="submit" class="btn btn-info"name="button">Add A Project </button>
  </form>
  <br>
  <br>

  <form class="container form-group button" action="/projects/update" method="update" name="projects">
    <select id="projects_update" name="projects_update">
     <%if @projects != []%>
      <% @projects.each do |project| %>
       <option value = "<%= project.id %>" > <%= project.title %> </option>
       <% end %>
       <% else %>
       <option value="" disabled selected>no projects yet</option>
       <% end %>
     </select>

     <label id="renameproject" name="renameproject" type = "text">Rename Project Title</label>
     <input type="text" name="renameproject">

    <button type="submit" class="btn btn-info"name="button">Update A Project</button>
  </form>
  <br>
  <br>

  <form class="container form-group button" action="/projects/delete" method="delete" name="projects">
    <select id="project_delete" name="project_delete">
     <%if @projects != []%>
      <% @projects.each do |project| %>
       <option value = "<%= project.id %>" > <%= project.title %> </option>
       <% end %>
       <% else %>
       <option value="" disabled selected>no projects yet</option>
       <% end %>
     </select>
    <button  type="submit" class="btn btn-info"name="button">Delete A Project</button>
  </form>
  <br>
  <br>

  <button class="container" id="homepage" type="button" name="button">
    <a href="/">Return Home</a>
  </button>
</div>
